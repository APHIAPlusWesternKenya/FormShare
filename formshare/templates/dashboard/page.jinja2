{% extends 'base.jinja2' %}

{% block css %}
    {% cssresource request,'formshare','style' %}
{% endblock css %}

{% block topScripts %}
    {% jsresource request,'formshare','sweetalert' %}
{% endblock topScripts %}

{% block body %}
    {% block bodycontent %}
        <div id="wrapper">
            {% block wrapper %}
                {% block mainnav %}
                    {% snippet 'dashboard/snippets/navbar.jinja2', request=request,activeUser=activeUser,activeMenu=activeMenu,activeProject=activeProject %}
                {% endblock mainnav %}
                <div id="page-wrapper" class="gray-bg dashbard-1">
                    {% block pagewrapper %}
                        {% block pageheader %}
                            {% snippet 'dashboard/snippets/header.jinja2', request=request,activeUser=activeUser,showWelcome=showWelcome %}
                        {% endblock pageheader %}
                        {% block dashheader %}
                            <div class="row wrapper border-bottom white-bg page-heading">
                                {% block breadcrumbs %}
                                    {#
                                        Extend this section to have breadcrumbs
                                        {% snippet 'dashboard/snippets/breadcrumbs.jinja2', request=request %}
                                    #}
                                {% endblock breadcrumbs %}
                            </div>
                        {% endblock dashheader %}
                        {% block mainsection %}
                            <div class="wrapper wrapper-content">
                                {% block maincontent %}
                                    {# Here goes the content of the page #}
                                {% endblock maincontent %}
                            </div>
                        {% endblock mainsection %}
                        {% block footer %}
                            {% snippet 'dashboard/snippets/footer.jinja2', request=request %}
                        {% endblock footer %}
                    {% endblock pagewrapper %}
                </div>
                {% block smallchat %}
                    {# Uncomment this snippet to have the chat screen #}
                    {#  {% snippet 'dashboard/snippets/chat.jinja2', request=request %}#}
                {% endblock smallchat %}
                {% block sidebar %}
                    {% if activeUser != None  %}
                        {% snippet 'dashboard/snippets/sidebar.jinja2', request=request %}
                    {% endif %}
                {% endblock sidebar %}
            {% endblock wrapper %}
        </div>
    {% endblock bodycontent %}
    {% block scripts %}
        {% jsresource request,'formshare','inspinia' %}
        {% set messageData = request.session.pop_flash() %}
        {% if messageData|length > 0 %}
            <script>
                $(document).ready(function() {
                    messageData = '{{ messageData[0] }}';
                    swal({
                        title: 'FormShare',
                        text: messageData,
                        type: "success"
                    });
                });
            </script>
        {% endif %}
    {% endblock scripts %}
{% endblock body %}
