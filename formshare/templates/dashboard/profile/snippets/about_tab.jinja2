<div class="ibox">
    <div class="ibox-title">
        <h5>{{ _('About') }} {{ userDetails.user_name  }}</h5>
        <div class="ibox-tools">
            {% if viewingSelfAccount %}
                <a href="{{ request.route_url('profile_edit',userid=activeUser.login) }}" style="margin-right: 10px">
                    <i class="fas fa-pencil-alt text-warning" title="{{ _('Edit') }}"></i>
                </a>
            {% endif %}
            <a class="collapse-link" style="margin-right: 10px">
                <i class="fas fa-chevron-up"></i>
            </a>
            <a class="fullscreen-link">
                <i class="fas fa-expand"></i>
            </a>
        </div>
    </div>
    <div class="ibox-content">
        {% if userDetails.user_about != None %}
            <textarea id="bio_hidden" style="display:none;">{{ userDetails.user_about }}</textarea>
            <div class="scroll_content">
                <small id="profile_bio">

                </small>
            </div>
        {% else %}
            <small id="profile_bio">{{ _('Without bio') }}</small> {% if viewingSelfAccount %} <a href="{{ request.route_url('profile_edit',userid=activeUser.login) }}"><i class="fas fa-pencil-alt text-warning" title="{{ _('Edit') }}"></i></a> {% endif %}
        {% endif %}
    </div>
</div>