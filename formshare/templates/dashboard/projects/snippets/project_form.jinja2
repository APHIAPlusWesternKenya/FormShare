{% block project_form %}
    <form class="m-t" role="form" method="post" action="{{ request.url }}" enctype="multipart/form-data" >
        {{ form.secure_form(request) }}
        {% block project_form_code %}
            <div class="form-group row"><label class="col-sm-2 col-form-label">{{ _('Code') }}</label>
                <div class="col-sm-10"><input type="text" class="form-control" name="project_code" value="{{ projectDetails.project_code }}"> <span class="form-text m-b-none">{{ _('The code must be unique and cannot be changed afterwards') }}</span> </div>
            </div>
        {% endblock project_form_code %}
        <div class="hr-line-dashed"></div>
        <div class="form-group row"><label class="col-sm-2 col-form-label">{{ _('Name') }}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="project_name" value="{{ projectDetails.project_name }}">
            </div>
        </div>
        <div class="hr-line-dashed"></div>
        <div class="form-group row"><label class="col-sm-2 col-form-label">{{ _('Abstract') }}</label>
            <div class="col-sm-10">
                <textarea class="form-control" name="project_abstract" data-provide="markdown" rows="10">{% if projectDetails.project_abstract != None %}{{ projectDetails.project_abstract }}{% endif %}</textarea>
            </div>
        </div>
        <div class="hr-line-dashed"></div>
        <div class="form-group row"><label class="col-sm-2 col-form-label">{{ _('Open access') }}</label>
            <div class="col-sm-10"><input type="checkbox" name="project_public" class="js-switch" {% if projectDetails|length > 0 %} {% if projectDetails.project_public == 1 %}checked{% endif %}{% else %}checked{% endif %} /><span class="form-text m-b-none">{% block open_access_comment %}{{ _('(Recommended) This means that the project is visible to the public and its data will be available within 6 months from the first submission.') }}{% endblock open_access_comment %}</span></div>
        </div>
        <div class="hr-line-dashed"></div>
        {% block project_form_controls_extra %}

        {% endblock project_form_controls_extra %}
        {% block project_form_actions %}
            <div class="form-group row">
                <div class="col-sm-4 col-sm-offset-2">
                    <button class="btn btn-primary btn-sm" type="submit">{{ _('Add project') }}</button>
                </div>
            </div>
        {% endblock project_form_actions %}
    </form>
{% endblock project_form %}