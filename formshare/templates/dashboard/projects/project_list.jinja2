{% extends 'dashboard/page.jinja2' %}

{% block titlesection %}{{ _("Projects") }}{% endblock titlesection %}

{% block breadcrumbs %}
    {% include 'dashboard/projects/snippets/brdcrbs_prjlist.jinja2' %}
{% endblock breadcrumbs %}

{% block maincontent %}
    <div class="ibox">
        <div class="ibox-title">
            <h5>Active projects</h5>
            <div class="ibox-tools">
                <a href="" class="btn btn-primary btn-xs" style="margin-right: 20px">{{ _('Create new project') }}</a>
                <a class="fullscreen-link">
                    <i class="fas fa-expand" style="margin-right: 10px"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <div class="row m-b-sm m-t-sm">
                <div class="col-md-1">
                    <button type="button" id="loading-example-btn" class="btn btn-white btn-sm" ><i class="fa fa-refresh"></i> {{ _('Refresh') }}</button>
                </div>
                <div class="col-md-11">
                    <div class="input-group"><input type="text" placeholder="{{ _('Search within my projects') }}" class="form-control-sm form-control"> <span class="input-group-btn">
                                        <button type="button" class="btn btn-sm btn-primary"> {{ _('Go!') }}</button> </span></div>
                </div>
            </div>
            {% for project in userProjects %}
                {% include 'dashboard/projects/snippets/project_item.jinja2' %}
            {% endfor %}
{#            {% include 'dashboard/projects/snippets/project_item.jinja2' %}#}

        </div>
    </div>
{% endblock maincontent %}