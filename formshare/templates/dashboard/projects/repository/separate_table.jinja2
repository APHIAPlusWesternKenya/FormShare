{% extends 'dashboard/page.jinja2' %}
{% import 'dashboard/macros/form.jinja2' as form %}

{% block titlesection %}{{ formid }}{% endblock titlesection %}

{% block css %}
    {{ super() }}
    {% cssresource request,'formshare','nestable' %}
{% endblock css %}

{% block topScripts %}
    {{ super() }}
