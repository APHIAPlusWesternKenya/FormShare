{% extends 'dashboard/page.jinja2' %}
{% import 'dashboard/macros/form.jinja2' as form %}

{% block titlesection %}{{ _('Creating repository for') }}{{ formid }}{% endblock titlesection %}

{% block breadcrumbs %}
    {% include 'dashboard/projects/repository/snippets/brdcrbs_new_group.jinja2' %}
{% endblock breadcrumbs %}

{% block mainsection %}
    <div style="margin-top: 10px" class="row">
        <div class="col-md-12">
            {% if errors|length > 0 %}
                {{ form.display_errors(errors) }}
            {% endif %}
            <form class="dataset-form form-horizontal add-member-form" method='post' action="{{ request.url }}">
                <input type="hidden" name="csrf_token" value="{{ request.session.get_csrf_token() }}">
                <div class="form-group row"><label class="col-sm-2 col-form-label">{{ _('Section name') }}</label>
                    <div class="col-sm-10"><input style="max-width: 200px" id="name" type="text" name="name" value="{{ group_name }}" class="form-control"> <span class="form-text m-b-none">A short name for the section. Must be unique.</span>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group row"><label class="col-sm-2 col-form-label">{{ _('Section description') }}</label>
                    <div class="col-sm-10"><input id="desc" type="text" name="desc" value="{{ group_desc }}" class="form-control"> <span class="form-text m-b-none">A meaningful description of the section.</span>
                    </div>
                </div>


                <div class="form-actions">
                    <button class="btn btn-primary" type="submit">
                        {{ _('Create section') }}
                    </button>
                </div>
            </form>
        </div>
    </div>
{% endblock mainsection %}