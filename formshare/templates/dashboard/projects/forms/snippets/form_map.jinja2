<div  class="ibox">
    <div class="ibox-title">
        <h5>{{ _('Map') }}</h5>
        <div class="ibox-tools">
            <a class="collapse-link" style="margin-right: 10px">
                <i class="fa fa-chevron-up"></i>
            </a>
            <a class="fullscreen-link">
                <i class="fa fa-expand"></i>
            </a>
        </div>
    </div>
    <div class="ibox-content">
        <div id="mapbox">
            {% if formDetails.submissions > 0 and formDetails.form_geopoint != None %}
                <div id="projmap" style="height: 600px"></div>
            {% else %}
                {% if formDetails.form_geopoint == None %}
                    This form is not georeferenced
                {% else %}
                    No map is available at the moment. Waiting for submissions
                {% endif %}
            {% endif %}
        </div>
    </div>
</div>