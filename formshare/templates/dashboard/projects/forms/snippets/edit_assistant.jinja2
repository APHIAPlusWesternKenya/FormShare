<div class="modal inmodal" id="edit_assistant" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated fadeIn">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">{{ _('Change privilege') }}</h4>
                <small id="rolewho" class="font-bold">Changing privilege of Carlos Quiros</small>
            </div>
            <form id="edit_assistant_form" role="form" method="post" action="">
                {{ form.secure_form(request) }}
                <input type="hidden" id="project_id" name="project_id" value="">
                <input type="hidden" id="coll_id" name="coll_id" value="">
                <div class="form-group">
                    <label class="col-sm-2 col-form-label">{{ _('Privileges') }}</label>
                    <div class="col-sm-10">
                        <label><input type="radio" checked value="1" id="role_submmit" name="privilege"> {{ _('Can submmit') }}</label><br/>
                        <label><input type="radio" value="2" id="role_clean" name="privilege"> {{ _('Can clean') }}</label><br/>
                        <label><input type="radio" value="3" id="role_both" name="privilege"> {{ _('Both') }}</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">{{ _('Cancel') }}</button>
                    <button type="submit" name="add_assistant" class="btn btn-primary">{{ _('Change role') }}</button>
                </div>
            </form>
        </div>
    </div>
</div>