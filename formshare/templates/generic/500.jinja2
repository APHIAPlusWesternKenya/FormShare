{% extends 'base.jinja2' %}

{% block titlesection %}{{ _('Application error') }}{% endblock titlesection %}

{% block css %}
    {% cssresource request,'formshare','style' %}
{% endblock css %}

{% block bodyclass %}gray-bg{% endblock bodyclass %}

{% block body %}
    <div class="middle-box text-center animated fadeInDown">
        <h1>500</h1>
        <h3 class="font-bold">{{ _('Internal Server Error') }}</h3>

        <div class="error-desc">
            {% block b_500_message %}
                {{ _('The server encountered an unexpected error and was not able to complete your request.') }}<br/><br/>
                {{ _('If the problem persists, please report the issue at:') }} https://github.com/qlands/FormShare <br/><br/>
                {{ _('We apologize for the inconvenience') }}<br/>
                <a href="{{ request.route_url('home') }}" class="btn btn-primary m-t">{{ _('Go back to the home page') }}</a>
            {% endblock b_500_message %}
        </div>
    </div>
    {% jsresource request,'formshare','bootstrap' %}
{% endblock body %}